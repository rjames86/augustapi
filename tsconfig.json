{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es3",
      "module": "commonjs",
      "allowJs": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "preserveConstEnums": true,
      "outDir": "dist",
      "lib": ["es6", "dom"],
      "alwaysStrict": true,
      "strictNullChecks": true
    },
    "include": [
      "./types.d.ts",
      "src/**/*"
    ]
  }